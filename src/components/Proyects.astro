const PROJECTS =[
{
    title:'Projects 1',
    description:'Analisis de RECURSOS HUMANOS, caracteristicas del personal segun departamento',
    link:'#',
    github:'#',
    imagen: 'public/RRHH.jpg',
    tags: ['Power BI']
}]
---

{
PROJECTS.map(({imagen, title, description, tags})=>(
    <article>
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul>
                {tags.map(tag =>(
                    <li>{tag}</li>
                ))}
            </ul>
            <img    
                class="rounded shadow-2xl shadow-white/20" 
                src={imagen} 
                alt={`El capture del proyecto ${imagen}`} />
    </article>
))
}